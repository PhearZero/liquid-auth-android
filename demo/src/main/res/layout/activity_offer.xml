<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="viewModel" type="foundation.algorand.demo.OfferViewModel"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".OfferActivity">
        <TextView
                android:text="Offer Client"
                android:textSize="40sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/offerTitle"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
        />
        <TextView
                android:text="@{@string/origin(viewModel.message.origin)}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/originTextView"
                app:layout_constraintTop_toBottomOf="@+id/offerTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"

        />
        <TextView
                android:text="@{@string/wallet(viewModel.address)}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/addressTextView"
                app:layout_constraintTop_toBottomOf="@+id/originTextView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"

        />
        <TextView
                android:text="@{@string/request(viewModel.message.requestId)}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/requestIdTextView"
                app:layout_constraintTop_toBottomOf="@+id/addressTextView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"

        />
        <ImageView
                android:id="@+id/qrCodeImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:layout_constraintTop_toBottomOf="@+id/requestIdTextView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
        />
        <Button
                android:text="@string/configure_provider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/configureButton"
                android:visibility="invisible"
                app:layout_constraintBottom_toTopOf="@+id/switchButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
        />
        <Button
                android:text="@string/switch_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/switchButton"
                app:layout_constraintBottom_toTopOf="@+id/disconnectButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
        />

        <Button
                android:text="@string/disconnect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/disconnectButton"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
